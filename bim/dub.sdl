// metadata
name "bim"
description "Building Information Modeling library for UIM framework"
authors "Ozan Nurettin Süel (aka UIManufaktur)"
license "Apache-2.0"
copyright "Copyright © 2018-2026, Ozan Nurettin Süel"

// target
targetName "uim-bim"
targetType "library"

// dependencies
dependency "uim-framework:entities" path=".."

// configurations
configuration "default" {
	targetType "library"
}

configuration "modules" {
	targetType "library"
	versions "show_module"
}

configuration "tests" {
	targetType "library"
	versions "show_module" "show_test"
}

configuration "inits" {
	targetType "library"
	versions "show_module" "show_init"
}

configuration "calls" {
	targetType "library"
	versions "show_module" "show_test" "show_function"
}

configuration "verbose" {
	targetType "library"
	versions "show_module" "show_test" "show_init" "show_function"
}